@page "/productManagement"
@inject IHttpClientFactory _httpClient

<AuthorizeView Roles="Admin">
    <Authorized>
        <h1 class="text-center mt-5 mb-5">Product Panel</h1>
        <div class="input-group input-group-lg">
            <input type="search" class="form-control mt-5 mb-5"
                   @bind-value="SearchInput" @bind-value:event="oninput"
                   placeholder="Search..." aria-label="Search">
        </div>
        <div>
            <a class="btn btn-primary d-inline-flex align-items-center" href="/addNewProduct">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
                Add New Product
            </a>
        </div>
        <table class="table table-sm align-middle mb-0 bg-white mt-3">
            <thead class="bg-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Categories</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Status</th>
                <th scope="col">Option</th>
            </tr>
            </thead>
            <Virtualize Items="FilteredProducts.ToArray()" Context="product">
                <tbody>
                <tr>
                    <td class="text-truncate" style="width: 15em">@product.Id.ToString().Replace("-", "")</td>
                    <td>@product.Name</td>
                    <td>@product.Category.Replace(" ", ", ")</td>
                    <td><p class="card-text text-truncate" style="width: 15em">@product.Description</p></td>
                    <td>@product.Price kr</td>
                    <td class="bg-transparent">
                        @if (@product.IsInStock)
                        {
                            <div class="bg-success rounded-pill p-1 text-white text-center">In Stock</div>
                        }
                        else
                        {
                            <div class="bg-danger rounded-pill p-1 text-white text-center">Out Of Stock</div>
                        }
                    </td>
                    <td><a href="/editProduct/@product.Id" class="btn btn-primary">Edit</a></td>
                </tr>
                </tbody>
            </Virtualize>
        </table>
    </Authorized>
</AuthorizeView>